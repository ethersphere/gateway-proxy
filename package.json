{
  "name": "@ethersphere/gateway-proxy",
  "version": "0.5.1",
  "description": "Swarm proxy server that can play role of a gateway",
  "keywords": [
    "bee",
    "swarm",
    "decentralised",
    "storage",
    "ethereum",
    "typescript",
    "p2p",
    "browser",
    "node"
  ],
  "bin": {
    "bee-gateway-proxy": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "rimraf ./build && tsc && chmod +x dist/index.js",
    "start": "nodemon --config nodemon.json src/index.ts",
    "start:debug": "nodemon --config nodemon.json --inspect-brk src/index.ts",
    "lint": "eslint --fix \"src/**/*.ts\" \"test/**/*.ts\" && prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:check": "eslint \"src/**/*.ts\" \"test/**/*.ts\" && prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "depcheck": "depcheck .",
    "check:types": "tsc --project tsconfig.test.json",
    "test": "jest --verbose",
    "bee": "bee-factory start"
  },
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@ethersphere/bee-factory": "^0.4.1",
    "@fluffy-spoon/substitute": "^1.208.0",
    "@jest/types": "^28.1.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.42",
    "@types/request-stats": "^3.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.27.1",
    "depcheck": "^1.4.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "@ethersphere/bee-js": "^4.1.1",
    "@ethersphere/swarm-cid": "^0.1.0",
    "express": "^4.18.1",
    "http-proxy-middleware": "^2.0.6",
    "prom-client": "^14.0.1",
    "request-stats": "^3.0.0",
    "winston": "^3.7.2"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.0.0",
    "bee": "1.6.0-6ceadd35"
  },
  "node_deb": {
    "entrypoints": {
      "daemon": "dist/index.js"
    },
    "init": "systemd",
    "install_strategy": "copy",
    "package_name": "gateway-proxy",
    "templates": {
      "systemd_service": "packaging/systemd/gateway-proxy.service"
    }
  }
}
