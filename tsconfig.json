{
  "include": ["src"],
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "es2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "es2020",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "rootDirs": ["src", "test"],
    "outDir": "dist"
  }
}
